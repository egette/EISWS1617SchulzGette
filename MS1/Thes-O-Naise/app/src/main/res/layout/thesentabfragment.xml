<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tab_layout2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/keinebegruendungen"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/keinebegründungentxt"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ExpandableListView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:groupIndicator="@null"
            android:id="@+id/expandablelistviewthesen"
            android:divider="@color/colorPrimary"
            android:dividerHeight="5.0sp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="0.08"
            android:layout_height="0dp"
            android:id="@+id/begruendungslayout">

        <EditText
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:inputType="textMultiLine|textNoSuggestions"
            android:ems="10"
            android:id="@+id/editbegruendung"
            android:hint="Begründung"
            android:background="@color/edittextBackgroundDark" />

        <ImageButton
            android:src="@drawable/ic_send_black_24dp"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/begruendungsbutton"
            android:background="@color/edittextBackgroundDark" />

    </LinearLayout>
</LinearLayout>

</RelativeLayout>